<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title>Hello, world!</title>
</head>

<body>
    <div class="container">
        <h1>Create New Recipe</h1>
        <form method="POST">
            <div>
                <label>Name</label>
                <input type="text" name="name" class="form-control" />
            </div>
            <div>
                <label>Description</label>
                <textarea name="description" class="form-control"></textarea>
            </div>
            <div>
                <label>Cooking Time</label>
                <input type="number" class="form-control" name="cooking_time" placeholder="Time in minutes" />
            </div>
            <div>
                <label>Ingredients</label>
                <textarea name="ingredients" class="form-control" placeholder="One ingredient per line"></textarea>
            </div>
            <div>
                <label>Steps</label>
                <textarea name="steps" class="form-control"
                    placeholder="One step per line, no numbering required"></textarea>
            </div>
            <div>
                <labe>Category:</labe>
                <select class="form-control" name="category_id">
                    {{#each categories}}
                    <option value="{{this.category_id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div>
                <labe>Cuisine:</label>
                <select class="form-control" name="cuisine_id">
                    {{#each cuisines}}
                    <option value="{{this.cuisine_id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
             <div>
                <labe>Tags:</labe>
                <select class="form-control" name="tags[]" multiple>
                    {{#each tags}}
                    <option value="{{this.tag_id}}">{{this.name}}</option>
                    {{/each}}
                </select>
            </div>
            <input type="submit" value="Create" class="btn btn-primary mt-3" />
        </form>
    </div>
</body>

</html>